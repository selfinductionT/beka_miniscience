#include <set>
#include <gmsh.h>

int main(int argc, char **argv)
{
  gmsh::initialize();
  gmsh::model::add("t1");

  double lc = 1e-2;
  // Two torus, both with guide radius 5. Second radius of first
  // torus equals 3, second radius of second torus equals 2.5

  
  // outer torus:
  gmsh::model::geo::addPoint(0, 0, 0, lc, 1); //centre
  //first circle
  gmsh::model::geo::addPoint(.2, 0, 0, lc, 2);
  gmsh::model::geo::addPoint(0, .2, 0, lc, 3);
  gmsh::model::geo::addPoint(-.2, 0, 0, lc, 4);
  gmsh::model::geo::addPoint(0, -.2, 0, lc, 5);
  //second circle
  gmsh::model::geo::addPoint(.5, 0, .3, lc, 6);
  gmsh::model::geo::addPoint(0, .5, .3, lc, 7);
  gmsh::model::geo::addPoint(-.5, 0, 0, lc, 8);
  gmsh::model::geo::addPoint(0, -.5, 0, lc, 9);
  

  gmsh::model::geo::addCircleArc(1, 5, 2, 1);
  gmsh::model::geo::addCircleArc(2, 5, 3, 2);
  gmsh::model::geo::addCircleArc(3, 5, 4, 3);
  gmsh::model::geo::addCircleArc(4, 5, 1, 4);


  gmsh::model::geo::addCurveLoop({1, 2, 3, 4}, 1);
  gmsh::model::geo::addPlaneSurface({1}, 1);

  
  gmsh::model::geo::addPoint(.1, 0, 0.3, lc, 6);
  gmsh::model::geo::addPoint(0, .1, 0.3, lc, 7);
  gmsh::model::geo::addPoint(-.1, 0, 0.3, lc, 8);
  gmsh::model::geo::addPoint(0, -.1, 0.3, lc, 9);
  gmsh::model::geo::addPoint(0, 0, 0.3, lc, 10);

  gmsh::model::geo::addCircleArc(6, 10, 7, 5);
  gmsh::model::geo::addCircleArc(7, 10, 8, 6);
  gmsh::model::geo::addCircleArc(8, 10, 9, 7);
  gmsh::model::geo::addCircleArc(9, 10, 6, 8);


  gmsh::model::geo::addCurveLoop({5, 6, 7, 8}, 2);
  gmsh::model::geo::addPlaneSurface({2}, 2);
  
  gmsh::model::geo::addLine(1, 6, 9);
  gmsh::model::geo::addLine(2, 7, 10);
  gmsh::model::geo::addLine(3, 8, 11);
  gmsh::model::geo::addLine(4, 9, 12);

  gmsh::model::geo::addCurveLoop({1, 10, -5, -9}, 3);
  gmsh::model::geo::addCurveLoop({2, 11, -6, -10}, 4);
  gmsh::model::geo::addCurveLoop({3, 12, -7, -11}, 5);
  gmsh::model::geo::addCurveLoop({4, 9, -8, -12}, 6);
  gmsh::model::geo::addSurfaceFilling({3}, 3);
  gmsh::model::geo::addSurfaceFilling({4}, 4);
  gmsh::model::geo::addSurfaceFilling({5}, 5);
  gmsh::model::geo::addSurfaceFilling({6}, 6);

  gmsh::model::geo::addSurfaceLoop({1, 2, 3, 4, 5, 6}, 1);
  gmsh::model::geo::addVolume({1});
  
  gmsh::model::geo::synchronize();
  gmsh::model::mesh::generate(3);

  gmsh::write("t1.msh");

  std::set<std::string> args(argv, argv + argc);
  if(!args.count("-nopopup")) gmsh::fltk::run();

  gmsh::finalize();

  return 0;
}
